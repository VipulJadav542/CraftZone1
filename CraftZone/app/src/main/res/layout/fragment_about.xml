            android:textSize="@dimen/_13ssp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10ssp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Best-in-class product, service and value for money are the firm’s core value."
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10ssp"
            android:gravity="center"
            android:text="Please have a glance at our product portfolio :"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            tools:ignore="HardcodedText" />


        <TextView
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20ssp"
            android:text="* Modular Kitchen                * Mattress"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,TextSizeCheck" />


        <TextView
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20ssp"
            android:text="* Wardrobes                         * Textures"
            android:textColor="@color/white"
            tools:ignore="HardcodedText,TextSizeCheck" />


        <TextView
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20ssp"
            android:text="* Fabric                                 * Upholstery Bed"
            android:textColor="@color/white"
            tools:ignore="HardcodedText,TextSizeCheck" />


        <TextView
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20ssp"
